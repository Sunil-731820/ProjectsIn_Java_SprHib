<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC 
"-//SPRING//DTD BEAN//EN" 
"http://www.springframework.org/dtd/spring-beans.dtd"> 

<beans>
	<bean id="poduct1" class="com.java.spr.Product">
		<property name="productName" value="Laptop"></property>
		<property name="quantityAvail" value="12"></property>
		<property name="price" value="12000"></property>
	</bean>
	<bean id="order1" class="com.java.spr.Order">
		<property name="qtyord" value="10"></property>
		<property name="orderId" value="1"></property>
		<property name="objProduct" ref="poduct1"></property>
	
	</bean>

	<bean id="orderLogic" class="com.java.spr.OrderLogic">
		<property name="items">
			<list>
				<ref bean="order1"/>
			</list>
		</property>
	</bean>
</beans>